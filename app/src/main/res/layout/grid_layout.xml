<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/cardView_gridLayout">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grid_list_number"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/grid_list_image"
            app:layout_constraintLeft_toLeftOf="@+id/grid_list_image"
            app:layout_constraintRight_toRightOf="@+id/grid_list_image" />

        <ImageView
            android:layout_width="82dp"
            android:layout_height="77dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/grid_list_image"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>